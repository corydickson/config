general {
        colors = true
        interval = 5
		color_good = "#978965"
}

order += "wireless _first_"
order += "ethernet _first_"
order += "path_exists VPN"
order += "battery 0"
order += "cpu_usage"
order += "tztime local"

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
		format = "ï° %title Online"
		format_down = "ïª %title Offline"
}

wireless _first_ {
        format_up = "wlan0:%essid:%ip"
        format_down = ""
}

ethernet _first_ {
        format_up = "eth0:%ip"
        format_down = ""
}

